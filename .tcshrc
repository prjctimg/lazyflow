


# Variables using setenv
setenv EDITOR nvim
setenv XDG_CONFIG_HOME "$HOME/.config"
setenv VIMRC "$XDG_CONFIG_HOME/nvim/"
setenv GHOSTTYRC "$XDG_CONFIG_HOME/ghostty/config"
setenv GHOSTTY_SHELL_INTEGRATION_NO_SUDO 0
setenv SHELL fish # Note: Sets the variable, does not change the running shell
setenv SUDO_EDITOR nvim
setenv CGO_ENABLED true 

# Update path using the `path` variable
set path = ( $HOME/.bun/bin /usr/bin/go/bin /usr/local/sbin /usr/local/bin /usr/local/games /usr/sbin /usr/bin /usr/games /sbin /bin $HOME/go/bin $HOME/.x-cmd.root/bin $HOME/go/pkg/mod/github.com/spf13/cobra@v1.9.1/ $path )

# Key bindings
bindkey -c '\ea' 'ai\n' 
bindkey -c '\ee' 'nvim\n' 
bindkey -c '\et' 'btop\n' 
bindkey -c '\eo' 'obsidian &\n' 
bindkey -c '\eh' 'invoke_bash "x --help"\n' 
bindkey -c '^N' 'navi\n' 
bindkey -c '\e ' 'spf\n'  # Alt-Space
bindkey -c '\ef' 'fzf\n' 

# Aliases (TCSH's equivalent of functions)
alias invoke_bash 'bash -ci'
alias wk 'cd $HOME/workspace/'
alias cron 'crontab \!*'
alias rc 'cd $HOME/sources/'
alias xx 'exit 0'
alias vig 'nvim $GHOSTTYRC'
alias ai 'ollama run qwen2.5-coder:1.5b'
alias vif 'nvim $HOME/.config/fish/config.fish'
alias vicron 'nvim $HOME/.config/.routines/'
alias manx 'invoke_bash "x --help"'
alias lsx 'invoke_bash "x ls \!*"'
alias to 'touch \!*'
alias so 'source ~/.tcshrc'
alias vin 'nvim $VIMRC'
alias rm 'command rm -rfv \!*'
alias see 'viu \!*'
alias git 'x git \!*'
alias obsidian 'command obsidian --disable-gpu &'
alias man 'command man \!* | vi -R'
alias ls 'nu -c "ls --threads=true \!*"'
alias lsp 'invoke_bash "x path \!*"'
alias chrome 'garcon-url-handler --client \!*'
alias vi 'nvim \!*'
alias mv 'command mv -v \!*'
alias cp 'command cp -rvf \!*'
alias du 'command du -sh \!*'
alias add-pkg 'sudo nala install \!*'
alias rm-pkg 'sudo nala remove \!* && sudo nala clean'
alias top 'btop \!*'
alias zig '/usr/bin/zig-aarch64-linux-0.15.0-dev.847+850655f06/zig \!*'

alias cdd 'if ($#argv == 0) then; echo "Change to pathüìÅ directory"; invoke_bash "x cd ."; else; echo "Change to pathüìÅ directory"; invoke_bash "x cd \!*"; endif'

alias agg 'foreach cast ( \!* ); command agg "$cast" "gif/$cast.gif"; end' 

alias mtrx 'tr -c "[:digit:]" " " < /dev/urandom | dd cbs=$COLUMNS conv=unblock | GREP_COLOR="1;32" grep --color "[^ ]"'

# Initialization (note the use of backticks `)
eval `starship init tcsh`
eval `thefuck --alias`

